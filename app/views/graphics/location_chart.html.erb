<%= render 'shared/location_restrictions' %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "bowling_chart",
	backgroundColor: "#FAFAFA",
      },
      title: {
        text: ""
      },
      xAxis: {
        labels: {
	  enabled: false
	}
      },
      yAxis: {
        title: {
	  text: "Punkte"
	}
      },
      tooltip: {
        formatter: function(){
	  var score_text = parseInt(this.y) + " Punkte";
	  return this.series.name + ": " + score_text;
	}
      },
      plotOptions: {
        series: {
	  cursor: 'pointer',
	  point: {
	    events: {
	      click: function(){
	        if (this.options.matchday_id != null){
		  location.href = "/match_days/" + this.options.matchday_id;
		}
	      }
	    }
	  }
	}
      },
      series: [
      <% @games.each do |location_id, scores| %>
      <% next if scores.empty? %>
      {
        name: "<%= Location.find(location_id).name %>",
        data: [
	  <% scores.each do |game| %>
	    {
	      y: <%= game.points %>,
	      matchday_id: <%= game.match_day.id %>
	    },
	  <% end %>
	]
      },
      <% if @regression %>
      {
        type: 'line',
	name: 'Regression',
	marker: {
	  enabled: false
	},
	data: (function(){
	  return <%= @regression.inspect %>;
	})()
      },
      <% end %>
      <% end %>
      ]
    });
  });
</script>

<div id="bowling_chart" style="width: 100%; height: 100%;"></div>

