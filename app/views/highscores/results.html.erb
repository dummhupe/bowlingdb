<%= render 'shared/restrictions' %>

<%= will_paginate @games %>
<table>
  <tr class="header">
    <th>Spieler</th>
    <th>Spiel</th>
    <th>Punkte</th>
    <th>Ger√§umt</th>
    <th>Strikes</th>
    <th>Spares</th>
    <th>Splits</th>
    <th>Fouls</th>
    <th>Datum</th>
    <th>Ort</th>
    <th>Kategorie</th>
  </tr>
  <% @games.each do |game| %>
    <tr>
      <td class="player"><%= game.player.full_name %></td>
      <td class="points"><%= game.number %></td>
      <td class="points"><%= game.points %></td>
      <td class="aggregated"><%= game.cleared_frames %></td>
      <td class="aggregated"><%= game.strikes %></td>
      <td class="aggregated"><%= game.spares %></td>
      <td class="aggregated"><%= game.splits %> (<%= game.cleared_splits %>)</td>
      <td class="aggregated"><%= game.fouls %></td>
      <td class="cell"><%= link_to game.match_day.formatted_match_day, match_day_path(game.match_day) %></td>
      <td class="cell"><%= game.match_day.location.name %></td>
      <td class="cell"><%= game.match_day.category.name %></td>
    </tr>
  <% end %>
</table>
