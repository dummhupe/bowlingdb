<%= form_for [:admin, @match_day], :html => { :class => "form-horizontal" } do |f| %>
  <% if @match_day.errors.any? %>
    <div id="errorExplanation">
      <%= @match_day.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">Datum</label>
    <div class="controls">
      <%= f.date_select :match_day, {}, { :class => "date_select" } %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Beschreibung</label>
    <div class="controls">
      <%= select :match_objects, :category, Category.categories_for_selection %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Ort</label>
    <div class="controls">
      <%= select :match_objects, :location, Location.locations_for_selection %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"></label>
    <div class="controls">
      <%= f.submit 'Speichern', :class => "btn btn-primary" %>
      <%= link_to 'Abbrechen', admin_match_days_path, :class => "btn" %>
    </div>
  </div>
<% end %>
